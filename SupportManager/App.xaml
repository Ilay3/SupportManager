<!-- App.xaml -->
<Application x:Class="SupportManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:converters="clr-namespace:SupportManager.Converters"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!-- Конвертеры для управления состоянием кнопок и RadioButton -->
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>

        <converters:NullableBoolToRadioConverter x:Key="NullableBoolToRadioConverter"/>
    </Application.Resources>
</Application>
